<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black"
            android:id="@+id/watchInterface"
            app:layout_box="all">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/triangle"
                android:id="@+id/magicTriangle"
                android:text="@string/default_intro"
                android:textColor="#fff"
                app:layout_box="all"
                />

            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_intro"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_alignStart="@+id/magicTriangle"
                android:layout_alignTop="@+id/magicTriangle"
                android:layout_alignEnd="@+id/magicTriangle"
                android:layout_alignBottom="@+id/magicTriangle"
                android:gravity="center"
                />
        </RelativeLayout>


</android.support.wearable.view.BoxInsetLayout>